# ===================================
# ECO-GESTO - MUSIC.AI INTEGRATION
# ===================================

# Music.AI API Configuration
# Get your API key from: https://music.ai/dashboard/api-keys
MUSICAI_API_KEY=your_api_key_here
MUSICAI_API_URL=https://api.music.ai/v1
MUSICAI_WORKFLOW_ID=genetic_mix_v1
MUSICAI_TIMEOUT=60000
MUSICAI_MAX_RETRIES=3

# Storage Configuration
STORAGE_MAX_SIZE_MB=50
STORAGE_CLEANUP_DAYS=7

# Audio Export Configuration
GENE_DURATION_SECONDS=3
GENE_EXPORT_FORMAT=mp3
GENE_EXPORT_BITRATE=128

# Mix Configuration
DEFAULT_GENE_INFLUENCE=0.3
MAX_HISTORY_SIZE=20

# System Configuration
DEBUG_MODE=false
ENABLE_FALLBACK=true
ENABLE_LOGGING=true

# Optional: External Storage (if using cloud storage)
# AWS_S3_BUCKET=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# Optional: Firebase Storage
# FIREBASE_API_KEY=
# FIREBASE_PROJECT_ID=
# FIREBASE_STORAGE_BUCKET=
